<div class="section">
  <input
    class="input-text outline-none"
    title="<%= path %>"
    value="<%= path %>"
    readonly="readonly"
  />
  <div class="section-box container-fluid">
    <ul class="row">
      <%_ files.forEach((e) => { _%>
      <li class="col-12 col-sm-2 col-xl-1 padding-4">
        <div class="img-container bc-transparent padding-2 d-flex-column-center">
          <div class="img-frame d-flex-column-center">
            <img class="d-block"" src="<%= e.uri %>" />
          </div>
        </div>
        <input
          class="input-text text-align-center outline-none"
          title="<%= e.basename %>"
          value="<%= e.basename %>"
          readonly="readonly"
        />
      </li>
      <%_ }) _%>
    </ul>
  </div>
</div>
